{% extends 'base.html.twig' %}

{% block title %}Hello SessionController!{% endblock %}

{% block body %}
    
    <main class="container">

        <h1>Mes sessions</h1>

        <section class="row d-flex flex-wrap">

            {% for session in sessions %}

                    <div class="col-3">
                        <a href=" {{ path('show_session', {'id': session.id}) }} ">
                        
                            <div class="card" style="height:15rem">
                                <figure class="figure">
                                    <img src="{{session.image}}" class="card-img-top img-fluid" alt="image {{session.title}}">
                                </figure>
                                <div class="card-body">
                                <h5 class="{{session.title}}">{{session.title}}</h5>
                                </div>
                            </div>
                        </a>
                    </div>

            {% endfor %}

    </section>

</main>

{% endblock %}
